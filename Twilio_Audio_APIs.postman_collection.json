            "name": "List All Recordings",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "X-API-Key",
                        "value": "{{api_key}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/api/twilio/recordings/?limit=20",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "twilio",
                        "recordings",
                        ""
                    ],
                    "query": [
                        {
                            "key": "limit",
                            "value": "20"
                        }
                    ]
                },
                "description": "Get all available Twilio recordings with detailed information"
            },
            "response": []
        },
        {
            "name": "List Recordings with Filters",
            "request": {
                "method": "GET",
